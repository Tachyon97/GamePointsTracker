<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="@color/coldBlue">

    <android.support.design.widget.TextInputLayout
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginTop="288dp"
        app:layout_constraintTop_toTopOf="parent" android:textColorHint="@color/textColour"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:boxBackgroundColor="@color/warmBlue" app:boxStrokeColor="@color/warmBlue"
        android:layout_marginRight="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/usernameFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:textColor="@color/textColour" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="55dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:id="@+id/textView5"
        android:text="@string/player" android:textAlignment="center" android:textSize="17sp"
        android:textColor="@color/textColour" android:layout_marginTop="304dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />
    <TextView
        android:layout_width="55dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:id="@+id/textView4"
        android:text="@string/player" android:textAlignment="center" android:textSize="17sp"
        android:textColor="@color/textColour" android:layout_marginTop="236dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent" android:textColorHint="@color/textColour"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:boxBackgroundColor="@color/warmBlue" app:boxStrokeColor="@color/warmBlue"
        android:layout_marginRight="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/usernameThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:textColor="@color/textColour" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="55dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:id="@+id/textView3"
        android:text="@string/player" android:textAlignment="center" android:textSize="17sp"
        android:textColor="@color/textColour" android:layout_marginTop="168dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginTop="152dp"
        app:layout_constraintTop_toTopOf="parent" android:textColorHint="@color/textColour"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:boxBackgroundColor="@color/warmBlue" app:boxStrokeColor="@color/warmBlue"
        android:layout_marginRight="8dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint" android:id="@+id/usernameTwo" android:textColor="@color/textColour"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintVertical_bias="0.029" android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
        android:textColor="@color/textColour"/>
    <TextView
        android:layout_width="55dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:id="@+id/textView"
        android:text="@string/player" android:textAlignment="center" android:textSize="17sp"
        android:textColor="@color/textColour" android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutFour"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColorHint="@color/textColour"
        app:boxBackgroundColor="@color/warmBlue"
        app:boxStrokeColor="@color/warmBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/usernameOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:textColor="@color/textColour" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="398dp"
        android:layout_height="56dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="72dp"
        android:text="@string/button"
        android:textColor="@color/textColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onClick"/>
    <Button
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:id="@+id/settingsButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.666" android:layout_marginBottom="8dp"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" android:text="@string/settings"
        android:textColor="@color/textColour"/>

</android.support.constraint.ConstraintLayout>